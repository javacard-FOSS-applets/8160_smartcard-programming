<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import presentation.controls.NumericTextField?>
<GridPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="presentation.controllers.IdentificationController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <children>
        <Label styleClass="fieldLabel" text="Name"/>
        <Label fx:id="nameLabel" text="name" GridPane.columnIndex="1"/>
        <Label styleClass="fieldLabel" text="Date of Birth" GridPane.rowIndex="1"/>
        <Label fx:id="birthDateLabel" text="date" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label styleClass="fieldLabel" text="Car Id" GridPane.rowIndex="2"/>
        <Label fx:id="carIdLabel" text="carid" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button fx:id="getButton" mnemonicParsing="false" text="Get" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label styleClass="fieldLabel" text="Safe PIN" GridPane.rowIndex="5"/>
        <NumericTextField fx:id="safePinTextField" maxWidth="250.0" GridPane.columnIndex="1"  GridPane.rowIndex="5"/>
        <Label fx:id="resultLabel" text="result" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        <Button fx:id="checkButton" mnemonicParsing="false" text="Check" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    </children>
</GridPane>